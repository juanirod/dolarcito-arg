---
interface Props {
  nombre: String;
  compra: number;
  venta: number;
  fechaActualizacion: String;
}

const { nombre, compra, venta, fechaActualizacion } = Astro.props;
---

<li
  class="group bg-slate-950 gap-y-4 rounded-lg transition-all border-slate-600 border
  px-3 flex gap-8 justify-between items-center py-4 hover:bg-slate-800 hover:border-slate-500
    
    hover:shadow-lg
     hover:shadow-green-500/20"
>
  <div class="max-w-[40%] flex flex-col truncate">
    <h1 class="text-lg font-bold truncate">DÃ³lar {nombre}</h1>
    <p class="text-sm font-medium text-slate-600">{fechaActualizacion}</p>
  </div>
  <div class="flex items-center justify-end gap-2">
    <div class="flex flex-col gap-y-1 items-center justify-center">
      <h1 class="font-light text-sm">Compra</h1>
      <p
        class="font-bold group-hover:text-green-600 group-hover:border-slate-600 text-center transition-all px-2 py-1 rounded-md border border-slate-800"
      >
      $   {compra}
      </p>
    </div>
    <div class="flex flex-col gap-y-1 items-center justify-center">
      <h1 class="font-light text-sm">Venta</h1>
      <p
        class="font-bold group-hover:text-green-600 group-hover:border-slate-600 text-center transition-all px-2 py-1 rounded-md border border-slate-800"
      >
      $ {venta}
      </p>
    </div>
  </div>


</li>
