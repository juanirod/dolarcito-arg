---
interface Props {
  nombre: String;
  compra: number;
  venta: number;
  fechaActualizacion: String;
}

const { nombre, compra, venta, fechaActualizacion } = Astro.props;
---

<li
  class="min-h-[17vh] bg-slate-900 gap-y-4 rounded-xl border-2
  transition-all
   border-slate-600 px-5 flex flex-col justify-center items-center py-4
    hover:bg-slate-800 hover:border-slate-500
    hover:scale-105
    hover:shadow-lg
     hover:shadow-green-500/20"
>
  <h1
    class="px-4  text-center text-2xl font-bold text-transparent
  bg-clip-text bg-gradient-to-b from-white/80 to-lime-200/90"
  >
    DÃ³lar {nombre}
  </h1>
  <div class="flex gap-x-10">
    <div class="flex flex-col gap-y-1 items-center justify-center">
      <h2 class="text-slate-400">Compra</h2>
      <p class="font-bold bg-slate-100 px-2 py-1 rounded-md text-green-500">
        ARS$ {compra}
      </p>
    </div>
    <div class="flex flex-col gap-y-1 items-center justify-center">
      <h2 class="text-slate-400">Venta</h2>
      <p class="font-bold bg-slate-100 px-2 py-1 rounded-md text-red-500">
        ARS$ {venta}
      </p>
    </div>
  </div>
  <p class="text-slate-500 text-sm">{fechaActualizacion}</p>
</li>
