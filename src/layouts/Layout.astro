---
import Footer from "../components/Footer.astro";
// Supports weights 100-900
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content=" Obtén información actualizada al instante sobre las 
      tasas de cambio del dólar a pesos argentinos. Nuestra página te proporciona cotizaciones 
      precisas y confiables para ayudarte a planificar tus operaciones con mayor precisión. "
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Pig.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="shortcut icon" href="/iconlink.jpg">

    <title>{title}</title>
  </head>
  <body
    class="dark:bg-slate-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    color-scheme: dark;
  }
  body {
    font-family: "Onest Variable", sans-serif;
  }
</style>
